[Unit]
Description=syo clipboard manager daemon
Documentation=https://github.com/olajoao/sticky-one
After=graphical-session.target

[Service]
Type=forking
PIDFile=%h/.local/share/sticky_one/daemon.pid
ExecStart=%h/.local/bin/syo daemon
ExecStop=%h/.local/bin/syo stop
Restart=on-failure
RestartSec=5

[Install]
WantedBy=default.target
